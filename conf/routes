# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

GET     /                           controllers.LoginController.login()
POST    /logar                      controllers.LoginController.logar()
GET     /home                       controllers.HomeController.index()
GET     /produtos                   controllers.ProdutoController.listar()
POST    /produtos/add               controllers.ProdutoController.adicionar()
GET     /produtos/new               controllers.ProdutoController.novo()
GET     /produtos/edit/:id          controllers.ProdutoController.editar(id:Long)
POST    /produtos/update/:id        controllers.ProdutoController.atualizar(id:Long)
POST    /produtos/delete/:id        controllers.ProdutoController.deletar(id:Long)
GET     /produtos/delete/:id        controllers.ProdutoController.formDeletar(id:Long)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
